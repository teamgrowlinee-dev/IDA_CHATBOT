{
  "name": "idastuudio-chatbot",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "app",
    "packages/widget"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:app dev:widget",
    "dev:app": "npm --workspace app run dev",
    "dev:widget": "npm --workspace @idastuudio/widget run dev",
    "build": "npm-run-all build:widget build:app",
    "build:app": "npm --workspace app run build",
    "build:widget": "npm --workspace @idastuudio/widget run build"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  }
}
